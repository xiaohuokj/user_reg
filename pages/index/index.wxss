/**index.wxss**/

page {
  border-top: 1rpx solid rgba(238,238,238,1);
  /* box-shadow: 0rpx 6rpx 6rpx 0rpx rgba(248,248,248,1); */
}

.home-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.home-header {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}

.home-header-btn {
  display: flex;
  justify-content: center;
  border-radius:40rpx;
  width:150rpx;
  height:50rpx;
  line-height: 50rpx;
  background: #3DA7BA;
  color: #FFFFFF;
  font-size: 26rpx;
  margin-top: 10rpx;
}



.home-header-left {
  float: left;
  margin-left: 30rpx;
}

.home-header-right {
  float: right;
  margin-right: 30rpx;
}

.home-content {
  width: 92%;
  height: 432rpx;
  margin: 30rpx auto;
  /* padding: 30rpx 30rpx 0 30rpx; */
  border-bottom: 1px solid rgba(236,236,236,1);
}
.home-spot-img {
  width: 690rpx;
  height: 292rpx;
  border-radius: 20rpx;
}

.home-spot {
  height:  120rpx;
  display: flex;
  flex-direction: column;
  float: left;
}

.home-spot-juliimg {
  width: 28rpx;
  height: 32rpx;
  margin: 0 10rpx 0 20rpx;
}

.home-shoot {
  float: right;
}

.home-spot-name, .home-spot-text, .home-shoot-button {
  font-size: 32rpx;
}

.home-spot-name {
  color: #333;
}

.home-spot-text {
  color: #666;
}

.home-spot-price {
  font-size: 30rpx;
  color: #f27d27;
}

.home-shoot-button {
  width: 184rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #3DA7BA;
  border-radius: 32rpx;
  text-align: center;
  color: #FFFFFF;
  margin-top: 30rpx;
}
